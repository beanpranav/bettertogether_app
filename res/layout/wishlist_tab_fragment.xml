<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab2"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/app_invert" >

        <ListView
            android:id="@+id/allWishListsListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/app_invert" >
        </ListView>

        <Button
            android:id="@+id/addNewList"
            style="@style/action_primary"
            android:onClick="addNewListClicked"
            android:paddingBottom="5dp" />

        <ImageView
            android:id="@+id/wishlists_icon"
            style="@style/image_relative_layout"
            android:layout_alignRight="@+id/addNewList"
            android:layout_alignTop="@+id/addNewList"
            android:layout_marginRight="12dp"
            android:layout_marginTop="17dp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/wishlists_icon" />

    </RelativeLayout>

</LinearLayout>