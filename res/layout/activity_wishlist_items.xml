<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iwl.bettertogforever.WishlistItemsActivity" >

     <ListView
        android:id="@+id/wishListItemsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
   <Button
        android:id="@+id/addNewList"
        style="@style/button_primary"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/wishListItemsListView"
        android:onClick="addNewListItemClicked"
        android:text="add New list Item" />
   
      <Button
        android:id="@+id/delListItems"
        style="@style/button_primary"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/addNewList"
        android:onClick="delListItemsClicked"
        android:text="del list Items" />


</RelativeLayout>
